<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.main.PrivacyController">
   <children>
      <SplitPane dividerPositions="0.5" layoutX="14.0" layoutY="14.0" prefHeight="160.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <items>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
               <children>
                  <VBox fx:id="vboxCheckboxes" prefHeight="200.0" prefWidth="100.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <children>
                        <CheckBox fx:id="chkSelectAll" mnemonicParsing="false" onAction="#selectAll" text="Select all" />
                        <Separator prefWidth="200.0" />
                        <CheckBox fx:id="chkDeleteDNSCache" contentDisplay="RIGHT" mnemonicParsing="false" text="Delete DNS cache">
                           <graphic>
                              <Button contentDisplay="TEXT_ONLY" minHeight="0.0" minWidth="0.0" mnemonicParsing="false" onMouseClicked="#showToolTipDNSCache" prefHeight="20.0" prefWidth="20.0" styleClass="btnHelp" text="?">
                                 <font>
                                    <Font size="10.0" />
                                 </font>
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                              </Button>
                           </graphic>
                        </CheckBox>
                        <CheckBox fx:id="chkDeleteCookies" mnemonicParsing="false" text="Delete browser cookies" />
                        <CheckBox fx:id="chkDeleteBrowserHistory" mnemonicParsing="false" text="Delete browser history" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </VBox>
                  <ButtonBar prefHeight="40.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                    <buttons>
                      <Button fx:id="btnRun" mnemonicParsing="false" onAction="#RunSelectedPrivacyOptions" text="Run" />
                    </buttons>
                     <padding>
                        <Insets right="5.0" />
                     </padding>
                  </ButtonBar>
               </children>
            </AnchorPane>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
               <children>
                  <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <padding>
                        <Insets top="5.0" />
                     </padding>
                     <children>
                        <Button fx:id="btnDeactivateCam" mnemonicParsing="false" onAction="#activateOrDeactivateCam" prefHeight="50.0" prefWidth="285.0" text="Deactivate/activate cam" />
                        <Button fx:id="btnTelemetryOptions" mnemonicParsing="false" onAction="#showTelemetryOptions" prefHeight="50.0" prefWidth="285.0" text="Telemetry options" />
                        <Button fx:id="btnFileShredder" mnemonicParsing="false" prefHeight="50.0" prefWidth="285.0" text="File shredder" />
                     </children></VBox>
               </children>
            </AnchorPane>
        </items>
      </SplitPane>
   </children>
</AnchorPane>
